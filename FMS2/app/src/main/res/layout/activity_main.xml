<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/dd"
    tools:context="com.example.suravi.fms1.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView"
            android:textColor="#610e0e"
            android:layout_weight="0.57" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/un"
            android:layout_weight="0.08"
            android:background="@color/button_material_light"
            android:hint="Usename"
            android:paddingLeft="25dp" />
        <TextView
            android:layout_width="352dp"
            android:layout_height="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView44"
            android:layout_gravity="right" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pw"
            android:layout_weight="0.09"
            android:background="@color/button_material_light"
            android:hint="Password"
            android:paddingLeft="25dp" />
        <TextView
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView5"
            android:layout_gravity="right"
            android:layout_weight="0.03" />
        <Button
            android:layout_width="216dp"
            android:layout_height="32dp"
            android:text="Login"
            android:id="@+id/login"
            android:layout_gravity="center_horizontal"

            android:textColor="#ffffff"
            android:textColorHighlight="#3627da"
            android:textColorHint="#490e0e"
            android:background="#307afa" />

        <TextView
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView3"
            android:layout_gravity="right"
            android:layout_weight="0.09" />

        <Button
            android:layout_width="137dp"
            android:layout_height="35dp"
            android:text="Register"
            android:id="@+id/register"

            android:textColor="#070707"
            android:textColorHighlight="#3627da"
            android:textColorHint="#490e0e"
            android:background="#f0ad4e"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.00" />

    </LinearLayout>
</RelativeLayout>
